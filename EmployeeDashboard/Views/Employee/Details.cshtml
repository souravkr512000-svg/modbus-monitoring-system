@model EmployeeDashboard.Models.Employee
@{
    ViewData["Title"] = $"Employee Details - {Model.FullName}";
}

<div class="employee-details">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-user"></i> Employee Details</h2>
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <div class="row">
        <!-- Main Information Card -->
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fas fa-info-circle"></i> Personal Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Employee ID:</dt>
                                <dd class="col-sm-8"><strong>@Model.EmployeeId</strong></dd>

                                <dt class="col-sm-4">Full Name:</dt>
                                <dd class="col-sm-8">@Model.FullName</dd>

                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">
                                    <a href="mailto:@Model.Email">
                                        <i class="fas fa-envelope"></i> @Model.Email
                                    </a>
                                </dd>

                                <dt class="col-sm-4">Phone:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Phone))
                                    {
                                        <a href="tel:@Model.Phone">
                                            <i class="fas fa-phone"></i> @Model.Phone
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Date of Birth:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.DateOfBirth.HasValue)
                                    {
                                        @Model.DateOfBirth.Value.ToString("MMMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Department:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@Model.Department?.Name</span>
                                </dd>

                                <dt class="col-sm-4">Position:</dt>
                                <dd class="col-sm-8"><strong>@Model.Position</strong></dd>

                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">
                                    @{
                                        var statusClass = Model.Status switch
                                        {
                                            EmploymentStatus.Active => "bg-success",
                                            EmploymentStatus.OnLeave => "bg-warning",
                                            EmploymentStatus.Terminated => "bg-danger",
                                            EmploymentStatus.Retired => "bg-secondary",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">@Model.Status</span>
                                </dd>

                                <dt class="col-sm-4">Hire Date:</dt>
                                <dd class="col-sm-8">@Model.HireDate.ToString("MMMM dd, yyyy")</dd>

                                <dt class="col-sm-4">Salary:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Salary.HasValue)
                                    {
                                        <strong class="text-success">@Model.Salary.Value.ToString("C")</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not disclosed</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Manager:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Manager != null)
                                    {
                                        <a asp-action="Details" asp-route-id="@Model.Manager.Id">
                                            <i class="fas fa-user-tie"></i> @Model.Manager.FullName
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No manager assigned</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Address Information -->
            @if (!string.IsNullOrEmpty(Model.Address))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="fas fa-map-marker-alt"></i> Address</h5>
                    </div>
                    <div class="card-body">
                        <address>
                            @Model.Address<br>
                            @if (!string.IsNullOrEmpty(Model.City))
                            {
                                @Model.City
                                @if (!string.IsNullOrEmpty(Model.State))
                                {
                                    <text>, @Model.State</text>
                                }
                                @if (!string.IsNullOrEmpty(Model.ZipCode))
                                {
                                    <text> @Model.ZipCode</text>
                                }
                                <br>
                            }
                            @if (!string.IsNullOrEmpty(Model.Country))
                            {
                                @Model.Country
                            }
                        </address>
                    </div>
                </div>
            }

            <!-- Skills -->
            @if (!string.IsNullOrEmpty(Model.Skills))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="fas fa-tools"></i> Skills</h5>
                    </div>
                    <div class="card-body">
                        <div class="skills-container">
                            @foreach (var skill in Model.Skills.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries))
                            {
                                <span class="badge bg-secondary skill-badge">@skill</span>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Notes -->
            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="fas fa-sticky-note"></i> Notes</h5>
                    </div>
                    <div class="card-body">
                        <p>@Model.Notes</p>
                    </div>
                </div>
            }
        </div>

        <!-- Quick Stats Card -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5><i class="fas fa-chart-line"></i> Quick Stats</h5>
                </div>
                <div class="card-body">
                    <div class="stat-item">
                        <i class="fas fa-calendar-alt"></i>
                        <div>
                            <strong>Years of Service</strong>
                            <p>@((DateTime.Now - Model.HireDate).Days / 365) years</p>
                        </div>
                    </div>
                    <hr>
                    <div class="stat-item">
                        <i class="fas fa-building"></i>
                        <div>
                            <strong>Department</strong>
                            <p>@Model.Department?.Name</p>
                        </div>
                    </div>
                    <hr>
                    <div class="stat-item">
                        <i class="fas fa-user-tie"></i>
                        <div>
                            <strong>Reports To</strong>
                            <p>@(Model.Manager?.FullName ?? "No Manager")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
