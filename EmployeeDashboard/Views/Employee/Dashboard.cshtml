@model EmployeeDashboard.Models.DashboardViewModel
@{
    ViewData["Title"] = "Employee Dashboard";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="dashboard-container">
    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="stat-card stat-card-primary">
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.Statistics.TotalEmployees</h3>
                    <p>Total Employees</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-card-success">
                <div class="stat-icon">
                    <i class="fas fa-user-check"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.Statistics.ActiveEmployees</h3>
                    <p>Active Employees</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-card-info">
                <div class="stat-icon">
                    <i class="fas fa-building"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.Statistics.DepartmentsCount</h3>
                    <p>Departments</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-card-warning">
                <div class="stat-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.Statistics.AverageSalary.ToString("C0")</h3>
                    <p>Average Salary</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="chart-card">
                <h5 class="chart-title"><i class="fas fa-chart-pie"></i> Employees by Department</h5>
                <canvas id="departmentChart"></canvas>
            </div>
        </div>
        <div class="col-md-6">
            <div class="chart-card">
                <h5 class="chart-title"><i class="fas fa-chart-bar"></i> Employees by Status</h5>
                <canvas id="statusChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Filters and Search -->
    <div class="card mb-4">
        <div class="card-header">
            <h5><i class="fas fa-filter"></i> Search & Filter</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Dashboard" id="filterForm">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="search">Search</label>
                            <input type="text" class="form-control" id="search" name="search" 
                                   value="@Model.SearchTerm" placeholder="Name, Email, ID, or Position">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="department">Department</label>
                            <select class="form-control" id="department" name="department">
                                <option value="">All Departments</option>
                                @foreach (var dept in Model.Departments)
                                {
                                    <option value="@dept.Id" selected="@(Model.DepartmentFilter == dept.Id)">
                                        @dept.Name
                                    </option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="status">Status</label>
                            <select class="form-control" id="status" name="status">
                                <option value="">All Statuses</option>
                                <option value="Active" selected="@(Model.StatusFilter == EmploymentStatus.Active)">Active</option>
                                <option value="OnLeave" selected="@(Model.StatusFilter == EmploymentStatus.OnLeave)">On Leave</option>
                                <option value="Terminated" selected="@(Model.StatusFilter == EmploymentStatus.Terminated)">Terminated</option>
                                <option value="Retired" selected="@(Model.StatusFilter == EmploymentStatus.Retired)">Retired</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>&nbsp;</label>
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="fas fa-search"></i> Search
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Employee Table -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5><i class="fas fa-list"></i> Employee Records (@Model.TotalRecords)</h5>
            @if (User.IsInRole("Admin") || User.IsInRole("HR"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-user-plus"></i> Add New Employee
                </a>
            }
        </div>
        <div class="card-body">
            @if (Model.Employees.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Employee ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Department</th>
                                <th>Position</th>
                                <th>Status</th>
                                <th>Hire Date</th>
                                <th style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model.Employees)
                            {
                                <tr>
                                    <td><strong>@employee.EmployeeId</strong></td>
                                    <td>
                                        <div class="employee-name">
                                            <i class="fas fa-user"></i> @employee.FullName
                                        </div>
                                    </td>
                                    <td>
                                        <a href="mailto:@employee.Email">
                                            <i class="fas fa-envelope"></i> @employee.Email
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@employee.Department?.Name</span>
                                    </td>
                                    <td>@employee.Position</td>
                                    <td>
                                        @{
                                            var statusClass = employee.Status switch
                                            {
                                                EmploymentStatus.Active => "bg-success",
                                                EmploymentStatus.OnLeave => "bg-warning",
                                                EmploymentStatus.Terminated => "bg-danger",
                                                EmploymentStatus.Retired => "bg-secondary",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @statusClass">@employee.Status</span>
                                    </td>
                                    <td>@employee.HireDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@employee.Id" 
                                               class="btn btn-sm btn-outline-primary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (User.IsInRole("Admin") || User.IsInRole("HR"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@employee.Id" 
                                                   class="btn btn-sm btn-outline-success" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@employee.Id" 
                                                   class="btn btn-sm btn-outline-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" href="?search=@Model.SearchTerm&department=@Model.DepartmentFilter&status=@Model.StatusFilter&page=@(Model.CurrentPage - 1)">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="?search=@Model.SearchTerm&department=@Model.DepartmentFilter&status=@Model.StatusFilter&page=@i">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" href="?search=@Model.SearchTerm&department=@Model.DepartmentFilter&status=@Model.StatusFilter&page=@(Model.CurrentPage + 1)">
                                    Next <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle"></i> No employees found matching your criteria.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Department Chart
        const departmentData = @Html.Raw(Json.Serialize(Model.Statistics.EmployeesByDepartment));
        const departmentLabels = Object.keys(departmentData);
        const departmentValues = Object.values(departmentData);

        const departmentCtx = document.getElementById('departmentChart').getContext('2d');
        new Chart(departmentCtx, {
            type: 'pie',
            data: {
                labels: departmentLabels,
                datasets: [{
                    data: departmentValues,
                    backgroundColor: [
                        '#007bff', '#28a745', '#ffc107', '#dc3545', '#17a2b8', '#6f42c1'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Status Chart
        const statusData = @Html.Raw(Json.Serialize(Model.Statistics.EmployeesByStatus));
        const statusLabels = Object.keys(statusData);
        const statusValues = Object.values(statusData);

        const statusCtx = document.getElementById('statusChart').getContext('2d');
        new Chart(statusCtx, {
            type: 'bar',
            data: {
                labels: statusLabels,
                datasets: [{
                    label: 'Employees',
                    data: statusValues,
                    backgroundColor: [
                        '#28a745', '#ffc107', '#dc3545', '#6c757d'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
    </script>
}
